        android:supportsRtl="true"
        android:theme="@style/Theme.ExpenseSpreadsheet"
        tools:targetApi="31">

        <!-- Set MainActivity as the launcher activity -->
        <activity
            android:name="com.math.spreadsheet.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.math.spreadsheet.SetupActivity"
            android:exported="true">
            <!-- Add intent filters only if needed for specific actions -->
        </activity>

        <activity
            android:name="com.math.spreadsheet.ExpensesHistoryActivity"
            android:exported="true">
            <!-- Add intent filters only if needed for specific actions -->
        </activity>

        <activity
            android:name="com.math.spreadsheet.EditExpenseActivity"
